<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
  "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	
	<definition name="basic" template="/WEB-INF/views/template/admin/contentLayout.jsp">
		<put-attribute name="main" value="" />
	</definition>
	
	<definition name="admin/main/*" extends="basic">
		<put-attribute name="main" value="/WEB-INF/views/admin/main/{1}.jsp" />
	</definition>
	
	<definition name="admin/recipe/*" extends="basic">
		<put-attribute name="main" value="/WEB-INF/views/admin/recipe/{1}.jsp" />
	</definition>
	
	<definition name="admin/user/*" extends="basic">
		<put-attribute name="main" value="/WEB-INF/views/admin/user/{1}.jsp" />
	</definition>
	
</tiles-definitions>